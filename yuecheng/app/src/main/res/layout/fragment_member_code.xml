<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient_yellow_hor"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="会员码"
            android:textColor="@color/gray_4b"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_member_card_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_10"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_member_barcode"
            android:layout_width="225dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/iv_member_qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_member_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_a9"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/ic_mall_floor"
            android:drawablePadding="6dp"
            android:text="会员特权与优惠"
            android:textColor="@color/gray_10"
            android:textSize="14sp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>