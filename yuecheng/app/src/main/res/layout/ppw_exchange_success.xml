<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="310dp"
              android:layout_height="wrap_content"
              android:background="@drawable/bound_white_5dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/btn_headerbar_share"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="兑换成功"
        android:textColor="@color/gray_10"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="您兑换的礼品已放置于“我的-兑换”，记得到店核销兑换哦！"
        android:textColor="@color/gray_66"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_exchange_success"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bound_gradient_green"
        android:gravity="center"
        android:text="兑换成功"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"/>
</LinearLayout>