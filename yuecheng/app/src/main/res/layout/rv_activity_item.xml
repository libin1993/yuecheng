<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_home_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        fresco:roundedCornerRadius="5dp"
        fresco:viewAspectRatio="2"/>

    <TextView
        android:id="@+id/tv_home_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_home_activity"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10.5dp"
        android:singleLine="true"
        android:textColor="@color/gray_33"
        android:textSize="15sp"/>

    <com.hfbh.yuecheng.view.FlowLayout
        android:id="@+id/flow_home_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_activity_name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_home_activity_receive">
    </com.hfbh.yuecheng.view.FlowLayout>

    <TextView
        android:id="@+id/tv_home_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flow_home_activity"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/gray_99"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_home_activity_receive"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tv_home_activity_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tv_home_activity_time"
        android:layout_marginTop="11dp"
        android:background="@color/gray_ed"/>

</RelativeLayout>