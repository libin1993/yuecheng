<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_coupon_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_home_coupon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/img_place_circle"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true"/>

            <TextView
                android:id="@+id/tv_home_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@id/iv_home_coupon"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray_95"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_home_coupon_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_home_coupon_title"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/iv_home_coupon"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_home_coupon_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:paddingBottom="14dp"
                android:textColor="@color/gray_95"
                android:textSize="13sp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_home_coupon_receive"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/red_99"
            android:gravity="center"
            android:textColor="@color/gray_e0"
            android:textSize="16sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>