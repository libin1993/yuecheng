<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_ed">

    <include
        layout="@layout/layout_widget_header"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_my_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_height="4dp"
        app:tl_indicator_margin_bottom="3dp"
        app:tl_indicator_style="BLOCK"
        app:tl_indicator_width="20dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/red_99"
        app:tl_textUnselectColor="@color/yellow_e0"
        app:tl_textsize="16sp"
        android:layout_marginTop="44dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_my_activity">
    </android.support.v4.view.ViewPager>

    <include
        layout="@layout/layout_loading"/>

</RelativeLayout>