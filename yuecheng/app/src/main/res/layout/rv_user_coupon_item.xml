<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_coupon_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/img_user_bigcoupon_red"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundedCornerRadius="6dp"
            fresco:viewAspectRatio="3.51"/>

        <TextView
            android:id="@+id/tv_my_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="16dp"
            android:text="1111111"
            android:textColor="@color/gray_10"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_my_coupon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_my_coupon_name"
            android:layout_marginLeft="27dp"
            android:text="www"
            android:textColor="@color/gray_10"
            android:textSize="12sp"/>

        <View
            android:id="@+id/view_coupon_line"
            android:layout_width="188.5dp"
            android:layout_height="2dp"
            android:layout_below="@id/tv_my_coupon_info"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/coupon_dotted_line"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_my_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_coupon_line"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="6dp"
            android:text="wwwssss"
            android:textColor="@color/gray_10"
            android:textSize="13sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>