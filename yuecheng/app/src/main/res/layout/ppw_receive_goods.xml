<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:background="@drawable/bound_white_5dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cancel_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="9dp"
        android:paddingLeft="30dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp"
        android:scaleType="center"
        android:src="@mipmap/ic_close_gray"/>

    <TextView
        android:id="@+id/tv_goods_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_goods_code"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_goods_confirm"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_red_100dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="15dp"/>

</LinearLayout>